---
interface Props {
  title: string;
  company: string;
  date: string;
  description: string;
}

const { title, company, date, description } = Astro.props;
---

<li class="mb-10 ms-5">
  <span class="text-[#3B82F6] -left-[11.5px] absolute rounded-full text-6xl"
    >&bull;</span
  >
  <h3 class="text-2xl font-bold text-[#3B82F6]">{title}</h3>
  <h4 class="text-xl font-semibold text-gray-800 dark:text-white">{company}</h4>
  <time class="mb-1 text-black dark:text-white/80 text-sm">{date}</time>
  <p class="mb-4 text-black dark:text-white">
    {description}
  </p>
</li>
